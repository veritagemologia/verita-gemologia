<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Leitor de QR Code – Verità</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Biblioteca gratuita para QR Code -->
  <script src="https://unpkg.com/html5-qrcode"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 24px;
    }
    #reader {
      max-width: 400px;
    }
    #resultado {
      margin-top: 16px;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }
  </style>
</head>
<body>

  <h2>Leitor de QR Code</h2>

  <div id="reader"></div>

  <div id="resultado">
    Aguardando leitura...
  </div>

  <script>
    // DADOS JÁ SALVOS NO SITE
    const itens = {
      "ITEM123": "Relatório Gemológico – Diamante",
      "ITEM456": "Relatório Gemológico – Safira"
    };

    function onScanSuccess(decodedText) {
      document.getElementById("resultado").innerText =
        itens[decodedText] || "Item não encontrado";
    }

    const html5QrCode = new Html5Qrcode("reader");
    html5QrCode.start(
      { facingMode: "environment" },
      { fps: 10, qrbox: 250 },
      onScanSuccess
    );
  </script>

</body>
</html>
