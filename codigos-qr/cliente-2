<script>
  const senhaCorreta = "1615"; // <<< MUDE AQUI A SENHA

  const senha = prompt("Digite a senha para acessar o certificado:");

  if (senha !== senhaCorreta) {
    document.body.innerHTML = "";
    alert("Senha incorreta.");
  } else {
    document.body.innerHTML = `
      <img src="pagina1.png">
      <img src="pagina2.png">
      <img src="pagina3.png">
      <img src="pagina4.png">
    `;
  }
</script>

